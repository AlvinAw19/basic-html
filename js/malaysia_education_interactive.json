{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 970,
  "height": 450,
  "background": "#e3f2fd",
  "padding": 0,
  "projection": {
    "type": "mercator",
    "center": [109.5, 3.8],
    "scale": 2650
  },
  "view": {
    "stroke": "transparent"
  },
  "params": [
    {
      "name": "year_select",
      "value": 2022,
      "bind": {
        "input": "range",
        "min": 2016,
        "max": 2022,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "sphere": true
      },
      "mark": {
        "type": "geoshape",
        "fill": "#e3f2fd"
      }
    },
    {
      "data": {
        "graticule": {
          "step": [2, 2]
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#bbdefb",
        "strokeWidth": 0.3
      }
    },
    {
      "data": {
        "url": "data/map.topojson",
        "format": {
          "type": "topojson",
          "feature": "gadm41_MYS_1"
        }
      },
      "transform": [
        {
          "calculate": "datum.properties.NAME_1 == 'KualaLumpur' ? 'W.P. Kuala Lumpur' : datum.properties.NAME_1 == 'NegeriSembilan' ? 'Negeri Sembilan' : datum.properties.NAME_1 == 'PulauPinang' ? 'Pulau Pinang' : datum.properties.NAME_1 == 'Trengganu' ? 'Terengganu' : datum.properties.NAME_1 == 'Putrajaya' ? 'W.P. Putrajaya' : datum.properties.NAME_1 == 'Labuan' ? 'W.P. Labuan' : datum.properties.NAME_1",
          "as": "state"
        },
        {
          "calculate": "datum.state + '_' + year_select",
          "as": "state_year_key"
        },
        {
          "lookup": "state_year_key",
          "from": {
            "data": {
              "url": "data/completion_by_year_keyed.csv"
            },
            "key": "state_year_key",
            "fields": ["avg_completion", "year"]
          }
        },
        {
          "calculate": "datum.avg_completion >= 100.5 ? 'Very High (≥100.5%)' : datum.avg_completion >= 99.5 ? 'High (99.5-100.4%)' : datum.avg_completion >= 98.5 ? 'Medium (98.5-99.4%)' : datum.avg_completion >= 97.5 ? 'Low (97.5-98.4%)' : 'Very Low (<97.5%)'",
          "as": "completion_category"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {
        "color": {
          "field": "completion_category",
          "type": "nominal",
          "scale": {
            "domain": [
              "Very Low (<97.5%)",
              "Low (97.5-98.4%)",
              "Medium (98.5-99.4%)",
              "High (99.5-100.4%)",
              "Very High (≥100.5%)"
            ],
            "range": ["#fcbba1", "#fc9272", "#fb6a4a", "#ef3b2c", "#cb181d"]
          },
          "legend": null
        },
        "tooltip": [
          {
            "field": "state",
            "title": "State"
          },
          {
            "field": "avg_completion",
            "title": "Average Completion Rate (%)",
            "format": ".2f"
          },
          {
            "field": "completion_category",
            "title": "Category"
          },
          {
            "field": "year",
            "title": "Year"
          }
        ]
      }
    },
    {
      "data": {
        "url": "data/malaysia_state_labelled.csv"
      },
      "mark": {
        "type": "text",
        "fontSize": 10,
        "fontWeight": "bold",
        "fill": "#1a1a1a"
      },
      "encoding": {
        "longitude": {
          "field": "longitude"
        },
        "latitude": {
          "field": "latitude"
        },
        "text": {
          "field": "state"
        }
      }
    }
  ],
  "config": {
    "legend": {
      "titleFontSize": 12,
      "labelFontSize": 11,
      "symbolType": "square"
    },
    "range": {
      "ramp": {
        "scheme": "blues"
      }
    },
    "axis": {
      "labelFontSize": 14,
      "titleFontSize": 14,
      "labelPadding": 8,
      "titlePadding": 10
    }
  }
}
