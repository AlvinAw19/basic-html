{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Teacherâ€“Student Ratio by State and Level (2022)",
    "subtitle": "Where are students most underserved? Darker colors = more students per teacher",
    "fontSize": 18,
    "subtitleFontSize": 12,
    "anchor": "start"
  },
  "width": 380,
  "height": 330,
  "background": null,
  "config": {
    "view": {"stroke": null},
    "axis": {"grid": false, "labelFontSize": 11}
  },
  "data": {"url": "data/teacher_student_ratio.csv"},
  "transform": [
    {"filter": "datum.level != 'Post-Secondary'"},
    {"calculate": "format(datum.ratio, '.1f')", "as": "ratio_formatted"}
  ],
  "layer": [
    {
      "mark": {"type": "rect", "stroke": "#ddd", "strokeWidth": 1},
      "encoding": {
        "x": {
          "field": "level",
          "type": "nominal",
          "title": "Education Level",
          "axis": {"labelAngle": 0, "labelFontSize": 12, "titleFontSize": 13},
          "sort": ["Primary", "Secondary", "Post-Secondary"]
        },
        "y": {
          "field": "state",
          "type": "nominal",
          "title": "State",
          "axis": {"labelFontSize": 11, "titleFontSize": 13},
          "sort": {"op": "mean", "field": "ratio", "order": "descending"}
        },
        "color": {
          "field": "ratio",
          "type": "quantitative",
          "title": ["Students per Teacher", "(Darker = Higher Pressure)"],
          "scale": {
            "scheme": "yelloworangered",
            "domain": [9, 14],
            "range": ["#ffffb2", "#fecc5c", "#fd8d3c", "#f03b20", "#bd0026"]
          },
          "legend": {
            "orient": "right",
            "gradientLength": 300,
            "titleFontSize": 12,
            "labelFontSize": 11
          }
        },
        "tooltip": [
          {"field": "state", "type": "nominal", "title": "State"},
          {"field": "level", "type": "nominal", "title": "Level"},
          {"field": "ratio_formatted", "type": "nominal", "title": "Student:Teacher Ratio"},
          {"field": "students", "type": "quantitative", "title": "Students", "format": ",.0f"},
          {"field": "teachers", "type": "quantitative", "title": "Teachers", "format": ",.0f"}
        ]
      }
    },
    {
      "mark": {"type": "text", "fontSize": 11, "fontWeight": "bold"},
      "encoding": {
        "x": {
          "field": "level",
          "type": "nominal",
          "sort": ["Primary", "Secondary", "Post-Secondary"]
        },
        "y": {
          "field": "state",
          "type": "nominal",
          "sort": {"op": "mean", "field": "ratio", "order": "descending"}
        },
        "text": {"field": "ratio_formatted", "type": "nominal"},
        "color": {
          "condition": {
            "test": "datum.ratio >= 13.4 || datum.ratio <= 10.0",
            "value": "#ffffff"
          },
          "value": "transparent"
        },
        "opacity": {
          "condition": {
            "test": "datum.ratio >= 13.4 || datum.ratio <= 10.0",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ]
}
